<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/azure">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font"
        android:text="SafeAlert App"
        android:textColor="@color/navy"
        android:textSize="50sp"
        android:textStyle="italic|bold"
        android:gravity="center"
        android:textAlignment="center" />

    <Button
        android:id="@+id/sosButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="SOS"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/steel_blue"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font"/>

    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Emergency Call"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/royal_blue"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font"/>

    <Button
        android:id="@+id/cancelEmergencyButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Cancel Call"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_below="@+id/emergencyButton"
        android:backgroundTint="@color/royal_blue"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font"/>

    <EditText
        android:id="@+id/phoneNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font"
        android:textStyle="italic|bold"/>

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a message"
        android:inputType="text"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font"
        android:textStyle="italic|bold"/>

    <EditText
        android:id="@+id/delayInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time (s)"
        android:inputType="number"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font"
        android:textStyle="italic|bold"/>

    <Button
        android:id="@+id/scheduleMessageButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Schedule message"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="@color/dodger_blue"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font"/>

    <Button
        android:id="@+id/cancelMessageButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Cancel message"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="@color/cornflower_blue"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font"/>
</LinearLayout>
