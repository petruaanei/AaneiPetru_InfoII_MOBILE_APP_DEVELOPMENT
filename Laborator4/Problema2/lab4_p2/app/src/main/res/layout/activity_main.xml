<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/gray">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/image1" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fútbol Club Barcelona, cunoscut ca Barcelona sau Barça, este un club de fotbal din Barcelona, Spania, fondat în 1899. Este un simbol al culturii și naționalismului catalan, având motto-ul „Barça este mai mult decât un club”. FC Barcelona este al doilea cel mai bogat club de fotbal, cu venituri anuale de 450 milioane €. Rivalitatea cu Real Madrid este celebră, meciurile dintre cele două echipe fiind denumite „El Clásico”."
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="@color/blue"
            android:layout_marginStart="10dp" />
    </LinearLayout>

</LinearLayout>
